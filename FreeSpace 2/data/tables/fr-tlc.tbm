2390, "(fr)Press [$q$]"

2391, "(fr)Maximize front shields"

2392, "(fr)Press [$Up Arrow$]"

2393, "(fr)Maximize Rear Shield"

2394, "(fr)Press [$Down Arrow$]"

2395, "(fr)Equalize shields"

2396, "(fr)Increase Weapons Energy"

2397, "(fr)Press [$insert$]"

2398, "(fr)Increase shield energy"

